<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<ol>
  <% @tasks.each do |task| %>
    <li>
      <%= task.completed ? "[X] " : "[ ] " %>
      <%= "#{task.content} - due: #{task.due_date} - author: #{task.author} - " %>
      <%= link_to "Edit", task_edit_path(task) %>
       -
      <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ol>

<%= link_to "Create new task", tasks_new_path %>
